<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app>
    <context-root>/Supermercado</context-root>
    
   <security-role-mapping>
      <role-name>Gerente</role-name>
      <group-name>Gerentes</group-name>
   </security-role-mapping>

   <security-role-mapping>
      <role-name>Dependiente</role-name>
      <group-name>Dependientes</group-name>
   </security-role-mapping>
   
   <security-role-mapping>
      <role-name>UsuarioNoRegistrado</role-name>
      <group-name>UsuariosNoRegistrados</group-name>
   </security-role-mapping>
   
   <security-role-mapping>
      <role-name>Usuario</role-name>
      <group-name>UsuariosRegistrados</group-name>
   </security-role-mapping>
   
   
</glassfish-web-app>